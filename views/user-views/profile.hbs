<h1>Crohnicles of {{user.username}}</h1>
<main>
  <aside class="dash">
    <img src="{{user.profilePic}}" alt="Profile Pic" id="profilePic"><br>
    <ul>
      <li>Conditions:</li>
      {{#each user.illness}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <ul>
      <li>Medications:</li>
      {{#each user.medications}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <a href="/user/friends">My Friends</a><br>
    <a href="/user/findfriends">Find Friends</a><br>
    <a href="/user/groups">My Groups</a><br>
    <a href="/groups">Find Groups</a><br>
    <a href="/events">Find Events</a><br>
    <a href="/user/edit">Edit Profile</a>
  </aside>
  <div class="body">
    <div>
      <p>{{user.name}}</p>
      <p>{{user.bio}}</p>
    </div>

    <div class="post">
        <form action="/post/create" method="POST" enctype="multipart/form-data">
          <p>Share something...</p>

          <label for="type">Type</label>
          <select name="type" id="type">
            <option value="Personal">Personal</option>
            <option value="Health">Health</option>
          </select><br>

          <label for="title">Title</label>
          <input type="text" name="title"><br>

          <label for="content">Content</label>
          <textarea name="content" id="content" cols="30" rows="10"></textarea><br>

          <label for="photo">Add Picture</label>
          <input type="file" name="photo"><br>

          <button type="submit">submit</button>
        </form>
        
    </div>

    <div>

      {{#each posts}}
        <div class="single">
          <a href="/post/single/{{id}}"><h1>{{title}}</h1></a>
          <a href="/user/profile/{{authorID}}"><h3>{{author}}</h3></a>

          <img src="{{image}}" alt="">
          <p>{{body}}</p>
        

          {{#if iAmAdmin}}
            <form action="/post/edit/{{id}}" method="GET">
              <button>Edit</button>
            </form>
            <form action="/post/delete/{{id}}" method="POST">
              <button>delete</button>
            </form>
          {{/if}}

          
        </div>
      {{/each}}
    </div>
  </div>
</main>