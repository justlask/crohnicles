<form action="/post/edit/{{posts.id}}" method="POST" enctype="multipart/form-data">
  <label for="type">Type</label>
  <select name="type" id="type">
    <option value="Personal">Personal</option>
    <option value="Health">Health</option>
  </select><br>

  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="{{posts.title}}"><br>

  <label for="content">Content</label>
  <textarea name="content" id="content" cols="30" rows="10">{{posts.body}}</textarea><br>

  <label for="photo">post image</label>
  <input type="file" name="photo"><br>

  <button>Update</button>

</form>